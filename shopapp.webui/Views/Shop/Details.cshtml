@model ProductDetailModel


<div class="row mb-5">
    <div class="col-md-3">
        <img src="~/images/@Model.Product.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">
        <h1 class="mb-3 mt-2">@Model.Product.Name</h1> <hr>

        @foreach (var item in Model.Categories)
        {
        <a asp-controller="shop" asp-action="list" asp-route-category="@item.Name" class="btn btn-link p-0 mb-3">@item.Name</a>
        }

        <div class="mb-3">
            <div class="row">
                <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign"></i>@Model.Product.Price
                </h4>
                <p class="p-3">
                    @Model.Product.Description
                </p>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
    </div>
</div>
