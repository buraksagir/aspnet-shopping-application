@model shopapp.entity.Product

<div class="card mb-4" style="height: 15%;">
     <img src="~/images/@Model.ImageUrl" class="img-fluid">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
             <i class="fas fa-lira-sign"></i>@Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        <a href="/@Model.Url" class="btn btn-primary btn-sm">Details</a>
        <a asp-controller="shop" asp-action="addtocart" asp-route-id="@Model.ProductID" class="btn btn-primary btn-sm" style="background-color: darkorange;">Add to Cart</a>
    </div>
</div>
